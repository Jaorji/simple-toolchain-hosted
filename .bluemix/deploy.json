{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string",
	    "$validate":{
		   "method":"validateCFRegion",
		    "params":{"apiKey":"api-key"}
	    }
	},
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string",
	    "$validate":{
		   "method":"validateCFSpace",
		   "params":{"region":"prod-region","apiKey":"api-key"}
	    }
        },
        "prod-space": {
            "description": "The bluemix space",
            "type": "string",
	    "$validate":{
		   "method":"validateCFSpace",
		   "params":{"region":"prod-region","organization":"prod-organization","apiKey":"api-key"}
	    }
        },
	    "ji-region": {
            "description": "The bluemix region",
            "type": "string",
            "$validate":{
		   "method":"validateCFRegion",
		    "params":{"apiKey":"self-api-key"}
	    }
        },
        "ji-organization": {
            "description": "The bluemix org",
            "type": "string",
	    "$validate":{
		   "method":"validateCFOrganization",
		   "params":{"region":"ji-region","apiKey":"self-api-key"}
	    }
        },
        "ji-space": {
            "description": "The bluemix space",
            "type": "string",
	    "$validate":{
		   "method":"validateCFSpace",
		   "params":{"region":"ji-region","organization":"ji-organization","apiKey":"self-api-key"}
	    }
        },
        "api-key": {
            "description": "API key description",
            "type": "string",
	    "$validate":{
		   "method":"validateApiKey",
		    "params":{"apiKey":"api-key"}
	    }
        },
	 "self-api-key": {
            "description": "API key description",
            "type": "string",
	    "$validate":{
		"method":"validateApiKey",
		"params":{"apiKey":"self-api-key"}
	    }
        },
        "prod-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-app-name",
        "api-key"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "prod-app-name"
        },
        {
	        "type": "ibm-cloud-api-key",
	        "readonly": false,
	        "title": "IBM Cloud API Key",
	        "key": "api-key"
        },
	{
	    "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
		"28%"
            ],
	    "items": [
	       {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
		   {
                    "type": "select",
                    "key": "prod-region",
            "options" : {
                 "$populate":{
                "method":"populateCFRegions",
                "params":{"apiKey":"api-key"}
                 }
            }
                },
                {
                    "type": "select",
                    "key": "prod-organization",
                "options":{
                 "$populate":{
                "method":"populateCFOrganizations",
                "params":{"region":"prod-region","apiKey":"api-key"}
                 }
            }
                },
                            {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false,
            "options": {
                 "$populate":{
                "method":"populateCFSpaces",
                "params":{"region":"prod-region","organization":"prod-organization","apiKey":"api-key"}
                 }
            }
                }
		    
	    ]
	}
    ]
}
