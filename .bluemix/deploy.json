{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
	    "ji-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "ji-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "ji-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "api-key": {
            "description": "API key description",
            "type": "string"
        },
        "prod-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "prod-region",
        "prod-organization",
        "prod-space",
	"ji-region",
	"ji-organization",
	"ji-space",
        "prod-app-name",
        "api-key"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "prod-app-name"
        },
        {
	        "type": "password",
	        "readonly": false,
	        "title": "IBM Cloud API Key",
	        "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
		"28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region",
		    "$populate":{
			    "name":"getCFRegions"
		    }
                },
                {
                    "type": "select",
                    "key": "prod-organization",
		    "$populate":{
			    "name":"getCFOrganization",
			    "params":{"region":"prod-region"}
		    }
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false,
		    "$populate":{
			    "name":"getCFSpace",
			    "params":{"region":"prod-region","organization":"prod-organization"}
		    }
                },
		     {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/jiStage"
                    }
                },
                {
                    "type": "select",
                    "key": "ji-region",
		     "$populate":{
			    "name":"getCFRegions"
		    }
                },
                {
                    "type": "select",
                    "key": "ji-organization",
		    "$populate":{
			    "name":"getCFOrganization",
			    "params":{"region":"ji-region"}
		    }
                },
                {
                    "type": "select",
                    "key": "ji-space",
                    "readonly": false,
		    "$populate":{
			    "name":"getCFSpace",
			    "params":{"organization":"ji-organization","region":"ji-region"}
		    }
                }
            ]
        }
    ]
}
